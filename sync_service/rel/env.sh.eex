#!/bin/sh

# Adjust Erlang logger and SASL config to get a more or less sane behaviour for opentelemetry.
# Without these options, opentelemetry does not emit any logs when running in a release.
# Without the SASL options, logs would get spammed with PROGRESS REPORT messages.
export ELIXIR_ERL_OPTIONS="-kernel logger_sasl_compatible true -sasl sasl_error_logger false -kernel logger_level info"
